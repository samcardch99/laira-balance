---
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import ReserveButton from "../components/helpers/ReserveButton.astro";
import "../styles/global.css";
import Menu from "../components/Menu.astro";
import "lenis/dist/lenis.css";
import { SEO } from "astro-seo";
import Schema from "../components/SEO/Schema.astro";
import { SEO_TEXT } from "../data/SEO/SEO_TEXT.js";
import { getLangFromUrl, useTranslations } from "../i18n/utils";
const { title, description } = Astro.props;
const language = getLangFromUrl(Astro.url);
const t = useTranslations(language);
const seo = SEO_TEXT[language] || SEO_TEXT["es"];
---

<!doctype html>
<html lang={language}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/logo.svg" />
    <meta name="generator" content={Astro.generator} />
    <SEO
      title={title}
      description={description}
      titleTemplate=" %s - Laira Balance"
      openGraph={{
        image: {
          type: "image/png",
          width: 1200,
          height: 630,
          alt: "Laira Balance Studio Open Graph Image",
        },
        article: {
          publishedTime: new Date().toISOString(),
          authors: ["Borsoga Studio"],
        },
        basic: {
          title: seo.title,
          type: "website",
          image: "/og_logo2.jpg",
        },
        optional: {
          description: seo.description,
        },
      }}
      extend={{
        // extending the default meta tags12
        meta: [
          {
            name: "twitter:image",
            content: "/og_logo2.jpg",
          },
          { name: "twitter:title", content: seo.title },
          {
            name: "twitter:description",
            content: seo.description,
          },
        ],
      }}
    />
    <Schema />
  </head>
</html>
<body>
  <Menu />
  <ReserveButton />
  <Navbar />
  <slot />
  <Footer />
</body>

<script is:inline>
  document.addEventListener("DOMContentLoaded", () => {
    const fadeUpSections = document.querySelectorAll("[data-fade-up-section]");

    const observer = new IntersectionObserver(
      (entries, observer) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            const section = entry.target.closest("[data-fade-up-section]");
            if (section) {
              const itemsInSection = Array.from(
                section.querySelectorAll(".fade-up-item"),
              );
              const index = itemsInSection.indexOf(entry.target);
              if (index !== -1) {
                entry.target.style.transitionDelay = `${index * 0.05}s`; // Progressive delay within its section
              }
            }
            entry.target.classList.add("is-visible");
            observer.unobserve(entry.target);
          }
        });
      },
      {
        rootMargin: "0px",
        threshold: 0.1, // Trigger when 10% of the item is visible
      },
    );

    // Observe all fade-up items
    const allFadeUpItems = document.querySelectorAll(".fade-up-item");
    allFadeUpItems.forEach((item) => {
      observer.observe(item);
    });
  });
</script>

<style is:global>
  .fade-up-item {
    opacity: 0;
    transform: translateY(2.5rem);
    transition:
      opacity 0.6s ease-out,
      transform 0.6s ease-out,
      colors 0.3s ease-out;
  }

  .fade-up-item.is-visible {
    opacity: 1;
    transform: translateY(0);
  }
</style>

<style>
  html,
  body {
    background-color: #efeceb;
    margin: 0;
    padding: 0;
    max-width: 100%;
    min-height: 100vh;
    height: 100%;
    font-family:
      "Warming", Inter, Roboto, "Helvetica Neue", "Arial Nova", "Nimbus Sans",
      Arial, sans-serif;
    height: 100%;
    @apply tracking-wide overflow-visible;
  }
</style>
