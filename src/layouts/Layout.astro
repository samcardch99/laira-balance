---
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import ReserveButton from "../components/helpers/ReserveButton.astro";

import "../styles/global.css";
import { Toaster } from "sonner";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/logo.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Laira Balance</title>
  </head>
  <body>
    <Toaster client:idle />

    <ReserveButton />
    <Navbar />
    <slot />
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    background-color: #efeceb;
    margin: 0;
    max-width: 100vw;
    min-height: 100vh;
    width: 100vw;
    height: 100%;
    font-family: "Warming", Inter, Roboto, "Helvetica Neue", "Arial Nova",
      "Nimbus Sans", Arial, sans-serif;
    height: 100%;
    overflow-x: hidden;
    @apply tracking-wide;
  }
</style>
