---
import prices from "../data/about-data/prices.json";
import PriceCard from "../components/PriceCard.astro";
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import right_arrow from "../assets/prices/right_arrow.svg";
import trial from "../assets/prices/trial.jpg";
import class_pack from "../assets/prices/class_pack.jpg";
---

<Layout>
  <main class="min-h-screen w-full flex flex-col relative">
    <section
      id="about_prices"
      class="w-full min-h-screen relative px-16 xl:px-32 flex flex-col justify-center self-center pt-32 pb-20 md:pb-0 md:pt-0 gap-20 md:gap-10"
    >
      <div
        class="w-full md:items-center flex flex-col md:flex-row gap-20 md:gap-10"
      >
        <div class="flex w-full gap-4 flex-1 -ml-4 md:ml-0 md:pr-20">
          <h1 class="font-bold italic text-6xl lg:text-8xl text-primary">
            Prices
          </h1>
          <Image
            src={right_arrow}
            alt="right_arrow"
            class="hidden md:block h-8 self-center"
          />
        </div>
        <div class="h-48 bg-primary w-px hidden md:block"></div>
        <PriceCard
          title={prices[0].title}
          price={prices[0].price}
          subtitle={prices[0].subtitle}
          href="/contact"
          className="flex-1 md:pl-20"
        />
      </div>
      <div class="bg-primary w-full h-px hidden md:block"></div>
      <div class="w-full flex flex-col md:flex-row md:gap-10 gap-20">
        <PriceCard
          title={prices[1].title}
          price={prices[1].price}
          subtitle={prices[1].subtitle}
          href="/contact"
          className="flex-1 md:pr-20"
        />
        <div class="h-48 bg-primary w-px hidden md:block"></div>
        <PriceCard
          title={prices[2].title}
          price={prices[2].price}
          subtitle={prices[2].subtitle}
          href="/contact"
          className="flex-1 md:pl-20"
        />
      </div>
    </section>
    <section
      id="about_trial"
      class="h-[100dvh] w-full relative border border-primary border-t bg-pinkCustom md:flex"
    >
      <Image
        quality={80}
        height={1920}
        width={1080}
        quality={90}
        src={trial}
        alt="trial class section"
        class="h-full w-full md:w-1/2 object-cover filter brightness-90 border border-r border-primary"
      />
      <div
        class="flex flex-col items-center gap-1 md:gap-2 lg:gap-4 w-full md:w-1/2 px-10 text-secondary absolute md:relative bottom-4 self-center"
      >
        <h2 class="italic font-bold text-2xl md:text-3xl lg:text-5xl">
          Trial Class: $35
        </h2>
        <p class="text-xs md:text-sm text-center text-secondary/70">
          Expires 30 days from purchase<br />
          <span>(Only for new members)</span>
        </p>
        <p class="text-base md:text-lg lg:text-xl text-center">
          Includes access to locker, facial towel<br class="hidden lg:block" /> and
          aromatherapy at the end.
        </p>
        <a
          class="rounded-full light px-5 py-3 w-fit mt-4 md:text-lg lg:text-xl lg:!text-pinkCustom"
          href="/">Reserve</a
        >
      </div>
    </section>
    <section
      id="about_class_pack"
      class="w-full pt-20 relative flex flex-col md:flex-row md:h-[100dvh] md:items-center border border-t border-primary"
    >
      <div
        class="flex flex-col gap-20 md:justify-between w-full px-10 md:flex-1"
      >
        <div class="flex w-full justify-between">
          <div class="flex flex-col gap-6 w-3/5">
            <div class="flex flex-col">
              <h2 class="italic font-bold text-3xl lg:text-5xl text-primary">
                5 Class Pack <br /> $170
              </h2>
              <p class="text-base italic lg:text-xl text-primary/90">
                $34 per class
              </p>
            </div>
            <p class="text-lg lg:text-xl">Expires 3 months from purchase.</p>
          </div>
          <a
            href="/"
            class="rounded-full h-fit self-center px-6 py-3 darkPink lg:text-lg"
            >Reserve</a
          >
        </div>
        <div class="w-full h-px bg-primary"></div>
        <p class="italic font-bold text-2xl lg:text-3xl">
          Includes locker access, facial towel, and aromatherapy at the end.
        </p>
      </div>
      <Image
        src={class_pack}
        alt="class pack"
        height={1920}
        width={1080}
        quality={90}
        class="w-full h-[40vh] md:h-[50vh] lg:h-[60vh] mt-12 md:mt-0 object-cover md:flex-1 md:w-1/2"
      />
    </section>
  </main>
</Layout>
