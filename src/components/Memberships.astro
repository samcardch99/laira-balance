---
import { Image } from "astro:assets";
import image_1 from "../assets/membership-section/1.jpg";
import image_2 from "../assets/membership-section/2.jpg";
const { title, subtitle, button, footer, image, id } = Astro.props;
---

<section id={id} class="min-h-screen w-full relative">
  <div class="w-full h-[2px] bg-black z-50"></div>

  <div
    class="absolute top-0 py-10 lg:py-0 bottom-auto lg:bottom-10 lg:top-auto w-full lg:w-2/3 right-0 flex flex-col justify-between h-1/3 lg:h-[40%] items-center"
  >
    <div
      class="flex flex-col gap-2 lg:gap-4 justify-center mt-12 lg:mt-0 items-center"
    >
      <h2 class="text-2xl lg:text-5xl font-bold white-space-pre-line">
        {title}
      </h2>
      <h3 class="text-sm lg:text-xl font-bold">
        {subtitle}
      </h3>
      <a href="/memberships" class="darkPink px-6 py-2 rounded-full w-fit"
        >{button}</a
      >
    </div>
    <h3 class="italic text-sm lg:text-xl mt-4 text-center">
      {footer}
    </h3>
  </div>

  <Image
    src={image === "1" ? image_1 : image_2}
    alt="Membership Image 1"
    height={1920}
    width={1080}
    quality={80}
    class="lg:h-full object-cover h-2/3 w-full lg:w-1/3 absolute left-0 bottom-0 lg:top-0 lg:bottom-auto overflow-hidden lg:border-r-2 border-black"
  />
</section>
<style>
  .white-space-pre-line {
    white-space: pre-line;
  }
</style>
